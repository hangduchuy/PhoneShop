@model IEnumerable<ShopConnection.SanPham>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<section id="top-sale">
    <div class="container py-5">
        <h4 class="font-size-20">Top Sale</h4>
        <hr>
        <!-- owl carousel -->
        <div class="owl-carousel owl-theme">
            @foreach (var item in Model)
            {
                <div class="item py-2 border rounded-2 bg-light">
                    <div class="product" style="width:200px;height:350px">
                        <a href="@Url.Action("Details",new {  id= @item.MaSP})"><img src="~/assets/assets/products/@item.HinhChinh" alt="product1" class="img-fluid"></a>
                        <div class="text-center" style="height:100px">
                            <h6>@item.TenSp</h6>
                            <div class="rating text-warning font-size-12">
                                <span><i class="fas fa-star"></i></span>
                                <span><i class="fas fa-star"></i></span>
                                <span><i class="fas fa-star"></i></span>
                                <span><i class="fas fa-star"></i></span>
                                <span><i class="far fa-star"></i></span>
                            </div>
                            <div class="price py-2">
                                <span>$@item.Gia</span>
                            </div>

                        </div>
                        <input onclick="addToCart('@item.MaSP', '@item.TenSp', @item.Gia); window.location.href = '@Url.Action("Index", "GioHang")';" class="btn btn-2" value="Thêm vào Giỏ" style="background:gold;margin-left:5px" />
                    </div>
                </div>
            }


        </div>
        <!-- !owl carousel -->
    </div>
</section>
<!-- !Top Sale -->
 